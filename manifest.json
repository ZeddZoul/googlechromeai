{
  "manifest_version": 3,
  "name": "Survsay",
  "description": "Fill forms with your voice. Powered by on-device AI.",
  "version": "0.1.0",
  "icons": {
    "16": "logo.PNG",
    "32": "logo.PNG",
    "48": "logo.PNG",
    "128": "logo.PNG"
  },
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Survsay",
    "default_icon": {
      "16": "logo.PNG",
      "32": "logo.PNG",
      "48": "logo.PNG"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["firebase-config.js", "firebaseAI.js", "content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "tailwind.css",
        "inpage.js",
        "firebase-config.js",
        "firebaseAI.js",
        "firebase-injector.js",
        "logo.PNG"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; connect-src 'self' https://www.googleapis.com https://www.gstatic.com https://firebaseinstallations.googleapis.com https://identitytoolkit.googleapis.com https://generativelanguage.googleapis.com https://firebaseremoteconfig.googleapis.com; object-src 'self'"
  }
}
